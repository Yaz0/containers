set runtimepath+=/usr/local/share/nvim
set nocompatible
filetype plugin on
filetype indent on
syntax on
set number
set relativenumber
set mouse=a
set nobackup
set nowb
set noswapfile
set nofoldenable
set showtabline=2
set cursorline
autocmd WinEnter * setlocal cursorline
autocmd WinLeave * setlocal nocursorline
set clipboard=unnamedplus
set ignorecase
set smartcase
set incsearch
set hlsearch
nnoremap <silent> <Space> :nohlsearch<Bar>:echo<CR>
set wildmenu
xnoremap <expr> p 'pgv"'.v:register.'y'
map <C-Left> <C-w>h
map <C-Down> <C-w>j
map <C-Up> <C-w>k
map <C-Right> <C-w>l
map <S-Right> :tabn<CR>
map <S-Left>  :tabp<CR>
set backspace=indent,eol,start
set noexpandtab
set copyindent
set preserveindent
set softtabstop=0
set shiftwidth=4
set tabstop=4
set belloff=all
set updatetime=100
set colorcolumn=80
au FileType gitcommit setlocal colorcolumn=72
set laststatus=2
set noshowmode
set hidden
set autoread
au FocusGained * :checktime
autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o

call plug#begin('/usr/share/nvim/runtime/plugged')
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'tpope/vim-fugitive'
Plug 'ntpeters/vim-better-whitespace'
Plug 'airblade/vim-gitgutter'
Plug 'easymotion/vim-easymotion'
Plug 'kshenoy/vim-signature'
Plug 'junegunn/fzf.vim'
Plug 'conradirwin/vim-bracketed-paste'
Plug 't9md/vim-textmanip'
Plug 'jeffkreeftmeijer/vim-numbertoggle'
Plug 'tpope/vim-vinegar'
Plug 'RRethy/vim-illuminate'
Plug 'NLKNguyen/papercolor-theme'
Plug 'ludovicchabant/vim-gutentags'
Plug 'tpope/vim-commentary'
Plug 'ervandew/supertab'
Plug 'rbgrouleff/bclose.vim'
Plug 'svermeulen/vim-cutlass'
Plug 'mcchrish/nnn.vim'
Plug 'rhysd/git-messenger.vim'
call plug#end()

set background=dark
colorscheme PaperColor

set signcolumn=yes

let g:EasyMotion_off_screen_search = 0
let g:EasyMotion_verbose = 0

xmap <C-S-Down> <Plug>(textmanip-move-down)
xmap <C-S-Up> <Plug>(textmanip-move-up)
xmap <C-S-Left> <Plug>(textmanip-move-left)
xmap <C-S-Right> <Plug>(textmanip-move-right)

hi link illuminatedWord Visual

let g:fzf_preview_window = ''
nmap <C-Space>f :GFiles<CR>
nmap <C-Space>F :Files<CR>
nmap <C-Space>b :Gblame<CR>
nmap <C-Space>t :BTags<CR>
nmap <C-Space>T :Tags<CR>
nmap <C-Space>l :BLines<CR>
nmap <C-Space>m :Marks<CR>
nmap <C-Space>s :Rg<Space>
nmap <C-Space>c :BCommits<CR>
nmap <C-Space>C :Commits<CR>

let g:airline_theme='papercolor'
let g:airline_symbols_ascii = 1
let g:airline_extensions = []

nnoremap cob :set background=<C-R>=&background == 'dark' ? 'light' : 'dark'<CR><CR>

let g:gutentags_generate_on_empty_buffer = 1
let g:gutentags_file_list_command = {
  \ 'markers': {
    \ '.git': 'git ls-files',
  \ },
\ }

nnoremap ti :IlluminationToggle<CR>

let g:SuperTabCrMapping = 1

let g:nnn#replace_netrw = 1
let g:nnn#set_default_mappings = 0
nnoremap <leader>f :NnnPicker '%:p:h'<CR>
let g:nnn#command = 'nnn -c'
let g:nnn#action = {
      \ '<c-t>': 'tab split',
      \ '<c-x>': 'split',
      \ '<c-v>': 'vsplit' }
let g:nnn#layout = { 'window': { 'width': 0.9, 'height': 0.6, 'highlight': 'Debug' } }
